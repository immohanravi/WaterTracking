<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.robot_inc.watertracking">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addStock">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.robot_inc.watertracking.MainActivity" />
        </activity>
        <activity android:name=".updateStock">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.robot_inc.watertracking.MainActivity" />
        </activity>
        <activity android:name=".newCustomer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.robot_inc.watertracking.MainActivity" />
        </activity>
        <activity android:name=".customerDetails">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.robot_inc.watertracking.MainActivity" />
        </activity>
        <activity android:name=".viewModifyRecords">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.robot_inc.watertracking.MainActivity" />
        </activity>
        <activity android:name=".updateRecords" />
        <activity android:name=".addRecord"></activity>
    </application>

</manifest>